{
  "name": "youtube-livestream-controller",
  "version": "1.0.0",
  "description": "A resilient 24/7 YouTube livestreaming controller.",
  "main": "dist/web/index.js",
  "scripts": {
    "build:backend": "tsc",
    "build:frontend": "esbuild index.tsx --bundle --outfile=dist/public/bundle.js --jsx=automatic",
    "build": "rimraf dist && npm run build:backend && npm run build:frontend && cp index.html dist/public/",
    "start:web": "node dist/web/index.js",
    "start:worker": "node dist/worker/index.js",
    "dev:web": "nodemon app/web/index.ts",
    "dev:worker": "nodemon app/worker/index.ts"
  },
  "keywords": [
    "ffmpeg",
    "livestream",
    "youtube",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "esbuild": "^0.20.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}