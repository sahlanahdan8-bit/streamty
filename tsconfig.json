{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./app",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["app/shared/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules"]
}